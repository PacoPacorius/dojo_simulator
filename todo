    float holds (0-100)
    float striking (0-100)
    float kicking (0-100)

    float cardio (0-100)
    float agility (0-100)
    float strength (0-100)
    float flexibility (0-100)

    int weight_class

    float motivation (0-100)

    # stat and stat increase history 

    # stat history
    float holds[30];
    float striking[30];
    float kicking[30];

    float cardio[30]; 
    float agility[30]; 
    float strength[30]; 
    float flexibility[30]; 

    # stat increase history
    float holds_increase[6*4*3=72]; that's too much, sorry, maybe only once per week?
    float striking_increase[30];
    float kicking_increase[30];

    float cardio_increase[30]; 
    float agility_increase[30]; 
    float strength_increase[30]; 
    float flexibility_increase[30]; 
   
    }
    
    
